<Window x:Class="Keyboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:TV_OS_Project"
        mc:Ignorable="d" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Height="545" Width="1035">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="Black"/>
    </Window.Background>
    <Grid Margin="0,0,130,185">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="175*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,340" Grid.ColumnSpan="2">
            <ContentControl MaxWidth="700" MaxHeight="150" x:Name="KeyboardValueContent" Margin="0,0,0,380"/>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <ContentControl MaxWidth="900" MaxHeight="360" x:Name="KeyboardContent" Margin="0,-315,0,0"/>
        </Grid>
    </Grid>
</Window>
